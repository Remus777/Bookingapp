@model ClientBookingRequestVM

@{
    ViewData["Title"] = "MyLeave";
}

<h1>My Bookings</h1>

<hr />
<table id="DataTable" class="table">
    <thead>
        <tr>
            <th>
                Booking State
            </th>
            <th>
                Room Number
            </th>
            <th>
                Room Type
            </th>
            <th>
                Start Date
            </th>
            <th>
                End Date
            </th>
            <th>
                Cancel Request
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Bookings)
        {
        <tr>
            <td>
                @if (item.Date_To < DateTime.Now)
                {
                    <span class="badge badge-warning">Expired</span>
                }
                else if (item.Cancelled)
                {
                    <span class="badge badge-secondary">Cancelled</span>
                }
                else
                {
                    <span class="badge badge-success">Valid</span>
                }

            </td>
            @foreach (var itemr in item.Rooms)
            {
                <td>
                    @Html.DisplayFor(modelItem => itemr.RoomNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => itemr.RoomType)
                </td>
             }
                <td>
                    @Html.DisplayFor(modelItem => item.Date_From)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_To)
                </td>
            
                <td>
                    @if (!item.Cancelled && item.Date_To > DateTime.Now)
                    {
                        <a asp-action="CancelForUser" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure you want to cancel this booking?')">
                            Cancel
                        </a>
                    }

                </td>

            </tr>
        }
    </tbody>
</table>