@model BookingApp.Models.BookingVM

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <hr />
    <dl class="row">
        @foreach (var item in Model.Rooms)
        {
            <dt class="col-sm-2">
                Room Number
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.RoomNumber)
            </dd>
            <dt class="col-sm-2">
                Room Type
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => item.RoomType)
            </dd>
        }
        <dt class="col-sm-2">
            Number Of Rooms
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NrOfRooms)
        </dd>
        <dt class="col-sm-2">
            Start Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Date_From)
        </dd>
        <dt class="col-sm-2">
            End Date
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(modelItem => Model.Date_To)
        </dd>

    </dl>
</div>
<div>
    <a class="btn btn-outline-secondary" asp-action="Index">Back to List</a>
</div>
